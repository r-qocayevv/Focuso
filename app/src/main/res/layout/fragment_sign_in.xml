<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInFragment" >

    <ScrollView
        android:id="@+id/signInScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/signInButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="64dp"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/signInTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="64dp"
                    android:text="@string/sign_in_screen_title"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/backButton"
                    app:layout_constraintTop_toBottomOf="@+id/backButton" />

                <TextView
                    android:id="@+id/signInDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/sign_in_screen_description"
                    android:textColor="@color/thinTextColor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/signInTitle"
                    app:layout_constraintTop_toBottomOf="@+id/signInTitle" />

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/emailTextInputLayout"
                    app:layout_constraintTop_toBottomOf="@+id/signInDescription" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:textColorHint="@color/gray"
                    app:cursorColor="@color/colorPrimary"
                    app:hintEnabled="false"
                    app:hintTextColor="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabel"
                    app:startIconDrawable="@drawable/ic_mail"
                    app:startIconTint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_input_background"
                        android:backgroundTint="@color/input_background"
                        android:hint="@string/email"
                        android:inputType="text|textEmailAddress"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/passwordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/emailTextInputLayout"
                    app:layout_constraintTop_toBottomOf="@+id/emailTextInputLayout" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/gray"
                    app:cursorColor="@color/colorPrimary"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/black"
                    app:hintEnabled="false"
                    app:hintTextColor="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passwordLabel"
                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_input_background"
                        android:backgroundTint="@color/input_background"
                        android:hint="@string/password"
                        android:inputType="text|textPassword"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/rememberMeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/remember_me"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/rememberMeCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/passwordTextInputLayout" />

                <CheckBox
                    android:id="@+id/rememberMeCheckBox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/checkbox_background"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/rememberMeText"
                    app:layout_constraintStart_toStartOf="@+id/passwordTextInputLayout"
                    app:layout_constraintTop_toTopOf="@+id/rememberMeText" />

                <TextView
                    android:id="@+id/forgotPasswordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rememberMeText"
                    app:layout_constraintEnd_toEndOf="@+id/passwordTextInputLayout"
                    app:layout_constraintTop_toTopOf="@+id/rememberMeText" />

                <TextView
                    android:id="@+id/signUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/don_t_have_an_account_sign_up"
                    android:textColor="@color/thinTextColor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/forgotPasswordButton"
                    app:layout_constraintStart_toStartOf="@+id/passwordTextInputLayout"
                    app:layout_constraintTop_toBottomOf="@+id/rememberMeText" />

                <TextView
                    android:id="@+id/signInContinueWithLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/or_continue_with"
                    android:textColor="@color/thinTextColor"
                    app:layout_constraintEnd_toEndOf="@+id/signUpButton"
                    app:layout_constraintStart_toStartOf="@+id/signUpButton"
                    app:layout_constraintTop_toBottomOf="@+id/signUpButton" />

                <View
                    android:id="@+id/leftHorizontalDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@+id/signInContinueWithLabel"
                    app:layout_constraintEnd_toStartOf="@+id/signInContinueWithLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/signInContinueWithLabel" />

                <View
                    android:id="@+id/rightHorizontalDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@+id/signInContinueWithLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/signInContinueWithLabel"
                    app:layout_constraintTop_toTopOf="@+id/signInContinueWithLabel" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_with_google_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/ic_google"
                    app:iconGravity="textTop"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@null"
                    app:layout_constraintEnd_toStartOf="@+id/continue_with_apple_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/continue_with_apple_button"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_with_x_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="32dp"
                    app:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/ic_x"
                    app:iconGravity="textTop"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/continue_with_facebook_button"
                    app:layout_constraintTop_toTopOf="@+id/continue_with_apple_button"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_with_facebook_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/ic_facebook"
                    app:iconGravity="textTop"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@null"
                    app:layout_constraintEnd_toStartOf="@+id/continue_with_x_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/continue_with_apple_button"
                    app:layout_constraintTop_toTopOf="@+id/continue_with_apple_button"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_with_apple_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="32dp"

                    app:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/ic_apple"
                    app:iconGravity="textTop"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/continue_with_facebook_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/continue_with_google_button"
                    app:layout_constraintTop_toBottomOf="@+id/signInContinueWithLabel"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/sign_in"
        android:textColor="@color/always_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
